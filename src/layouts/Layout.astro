---

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Love of my life" />
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600&family=Montserrat:wght@200;300;400;500&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Italianno&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-minim-cream text-minim-stone">
    <nav class="fixed w-full bg-minim-cream/90 backdrop-blur-sm z-40">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <a href="/" class="font-display text-3xl tracking-wider">Hellen</a>
          <div class="hidden md:flex space-x-8 font-sans text-sm tracking-widest">
            <a href="/collections" class="hover:text-minim-charcoal transition-colors">cards</a>
            <a href="/about" class="hover:text-minim-charcoal transition-colors">Nosotros</a>
            <a href="/gallery" class="hover:text-minim-charcoal transition-colors">Galeria</a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>